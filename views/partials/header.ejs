<html lang="pt-br">
  <head>

    <!-- Configurações básicas -->
    <meta charset="UTF-8"/>
  	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  	<title>E-commerce de roupas</title>

    <meta name="description" 
          content="Projeto com foco em front-end desenvolvido por Camila Nuttoc"/>
    <meta name="keywords" 
          content="Front-end, CamilaNuttoc, Desenvolvimento, Web">
